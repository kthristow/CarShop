@model CarShop.Web.ViewModels.Car.DetailsCarViewModel
@using Microsoft.AspNet.Identity;

<section class="ftco-section ftco-car-details">
    <div class="container">

        @if (Model.UserId == this.User.Identity.GetUserId() && this.User.Identity.IsAuthenticated)
        {
            <div class="nav-buttons" style="padding-bottom:30px;">
                <a asp-action="DeleteCar" asp-controller="Car" asp-route-id="@Model.Id" class="btn btn-danger">Delete Car</a>
                <a asp-action="EditCar" asp-controller="Car" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="All" asp-controller="Car" class="btn btn-secondary">Back</a>
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="car-details">
                    <div class="img rounded" style="background-image: url(@Model.ImageUrl);"></div>
                    <div class="text text-center">
                        <span class="subheading">@Model.Brand</span>
                        <h2>@Model.Brand @Model.Model</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 pills">
                <div class="bd-example bd-example-tabs">
                    <div class="d-flex justify-content-center">
                        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

                            <li class="nav-item">
                                <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">
                                    Characteristic
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-manufacturer-tab" data-toggle="pill" href="#pills-manufacturer" role="tab" aria-controls="pills-manufacturer" aria-expanded="true">Description</a>
                            </li>
                        </ul>
                    </div>

                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
                            <div class="row">
                                <div class="col-md-8">
                                    <ul class="features">
                                        <li class="check"><span class="ion-ios-checkmark"></span>Mileage: @Model.Mileage</li>
                                        <li class="check"><span class="ion-ios-checkmark"></span>Hourse Power: @Model.HoursePower</li>
                                        <li class="check"><span class="ion-ios-checkmark"></span>Transmission: @Model.Transmission</li>
                                    </ul>
                                </div>
                                <div class="col-md-4">
                                    <ul class="features">
                                        <li class="check"><span class="ion-ios-checkmark"></span>Category: @Model.Category</li>
                                        <li class="remove"><span class="ion-ios-close"></span>Color: @Model.Color</li>
                                        <li class="check"><span class="ion-ios-checkmark"></span>Engine: @Model.EngineType</li>
                                        <li class="check"><span class="ion-ios-checkmark"></span>Year: @Model.YearOfCreation</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-manufacturer" role="tabpanel" aria-labelledby="pills-manufacturer-tab">
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>